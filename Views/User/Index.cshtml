@using RunnerUp.ViewModels

@model List<UserViewModel>

@{
    ViewData["Title"] = "Users Page";
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var user in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="@user.ProfileImageUrl" width="100%" height="225" alt="@user.UserName" />

                        <div class="card-body">
                            <p class="card-text">@user.UserName</p>

                            <p class="card-text">Mileage: @user.Mileage</p>

                            <p class="card-text">Pace: @user.Pace</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button"
                                       asp-controller="User"
                                       asp-action="Detail"
                                       asp-route-id="@user.Id"
                                       class="btn btn-sm btn-outline-secondary">
                                        View
                                    </a>

                                    @if (User.Identity is { IsAuthenticated: true } && User.IsInRole("admin"))
                                    {
                                        <a type="button"
                                           class="btn btn-sm btn-outline-secondary">
                                            Edit
                                        </a>

                                        <a type="button"
                                           class="btn btn-sm btn-outline-secondary">
                                            Delete
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
