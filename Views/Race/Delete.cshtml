@using RunnerUp.Data.Enum

@model Race

@{
    ViewData["Title"] = "Delete Race Page";
}

<h1>Are you sure you want to delete this race?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />

    <div class="form-group mb-3">
        <label asp-for="Title" for="title" class="form-label">Title</label>
        <input asp-for="Title" type="text" disabled="disabled" id="title" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" for="description" class="form-label">Description</label>
        <input asp-for="Description" type="text" disabled="disabled" id="description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Image" for="image" class="form-label">Image</label>
        <input asp-for="Image" type="file" disabled="disabled" id="image" class="form-control">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RaceCategory" for="raceCategory" class="form-label">Race Category</label>
        <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" disabled="disabled" id="raceCategory" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="RaceCategory" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address.Street" for="street" class="form-label">Street</label>
        <input asp-for="Address.Street" type="text" disabled="disabled" id="street" class="form-control">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address.City" for="city" class="form-label">City</label>
        <input asp-for="Address.City" type="text" disabled="disabled" id="city" class="form-control">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address.State" for="state" class="form-label">State</label>
        <input asp-for="Address.State" type="text" disabled="disabled" id="state" class="form-control">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-primary">Confirm</button>
        </form>
    </div>
</form>