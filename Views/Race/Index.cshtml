@model IEnumerable<Race>

@{
    ViewData["Title"] = "Races Page";
}

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var race in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@race.Image" width="100%" height="225" alt="@race.Title" />

                        <div class="card-body">
                            <p class="card-text">@race.Title</p>

                            <p class="card-text">@race.Description</p>

                            <div class="d-flex justify-content-between align-races-center">
                                <div class="btn-group">
                                    <a type="button"
                                       asp-controller="Race"
                                       asp-action="Detail"
                                       asp-route-id="@race.Id"
                                       class="btn btn-sm btn-outline-secondary">
                                        View
                                    </a>

                                    <a type="button"
                                       asp-controller="Race"
                                       asp-action="Edit"
                                       asp-route-id="@race.Id"
                                       class="btn btn-sm btn-outline-secondary">
                                        Edit
                                    </a>

                                    <a type="button"
                                       asp-controller="Race"
                                       asp-action="Delete"
                                       asp-route-id="@race.Id"
                                       class="btn btn-sm btn-outline-secondary">
                                        Delete
                                    </a>
                                </div>

                                <small class="text-muted">@race.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
